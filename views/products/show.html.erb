<article class="jumbotron mt-3">
  <h1 class="h2"><%= @product.name %></h1>
  <h2 class="h3 text-muted font-weight-normal"><%= @product.age_low %> â€“ <%= @product.age_high %> <%= @product.age_units %></h2>
  <p class="lead">
    <%= @product.description %>
  </p>
  <%= link_to new_order_path(product_id: @product.id), class: "btn btn-primary btn-lg text-uppercase text-tracked font-weight-bolder"  do %>
    Buy Now <%= number_to_currency(@product.floating_price) %>
  <% end %>

  <%= link_to new_order_path(product_id: @product.id, gift: true), class: "btn btn-warning btn-lg text-uppercase text-tracked font-weight-bolder"  do %>
    Gift Now <%= number_to_currency(@product.floating_price) %>
  <% end %>
</article>

<%= render partial: 'shared/commentable', locals: { comments: @product.comments.order(created_at: :desc) } %>

<nav class="pb-4">
  <%= link_to products_path, class: "text-normal font-weight-bolder" do %>
    &larr; Back to Products
  <% end %>
</nav>
