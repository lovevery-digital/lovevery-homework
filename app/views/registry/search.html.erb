<section class="mt-2 pt-3">
<h1 class="h2 text-center text-uppercase text-tracked">Gift Registry</h1>

<%= form_with model: @child, url: registry_find_path, local: true  do |form| %>
	<% if params[:redirect_path] %>
		<%= hidden_field_tag "redirect_path", params[:redirect_path] %>
	<% end %>

	<div class="form-row">
		<div class="form-group col-md-12">
    	<%= form.label :parent_name, "Parent's Name" %>
    	<%= form.text_field :parent_name, required: true, class: "form-control" %>
  	</div>
  	<div class="form-group col-md-6">
    	<%= form.label :full_name, "Child's Name" %>
    	<%= form.text_field :full_name, required: true, class: "form-control" %>
  	</div>
  	<div class="form-group col-md-6">
    	<%= form.label :birthdate, "Child's Birthdate (or expected date)" %>
    	<%= form.text_field :birthdate, required: true, class: "form-control" %>
    	<small id="passwordHelpBlock" class="form-text text-muted">
      	Use format YYYY-MM-DD
    	</small>
  	</div>
	</div>
	
  <div class="p-3">
    <%= form.submit("Search", class: "btn btn-primary btn-lg") %>
  </div>

<% end %>
</section>